services:
  ## https://docs.linuxserver.io/images/docker-swag
  {{answer.serviceName}}:
  image: {{answer.imageName}}:{{answer.imageTag}}
  container_name: nginx
  labels:
    - diun.enable=true
  env_file:
    - ../common.env
    - ./nginx.env
  volumes:
    - ./config/nginx/crowdsec/crowdsec-nginx-bouncer.conf:/config/crowdsec/crowdsec-nginx-bouncer.conf
    - ./config/nginx/nginx/nginx.conf:/config/nginx/nginx.conf
    - ./config/nginx/dns-conf/ovh.ini:/config/dns-conf/ovh.ini
    - ./config/nginx/sites:/config/nginx/site-confs
    - ./config/nginx/snippets:/config/nginx/snippets
    - /home/serverdatsite/Datsite/data/nginx/config:/config
    - /home/serverdatsite/Datsite/logs/nginx/:/config/log/
    - /home/serverdatsite/Datsite/sites/:/sites/
  cap_add:
    - NET_ADMIN
  ports:
    - "80:80"
    - "443:443"
  networks:
    - datsite
  restart: unless-stopped
